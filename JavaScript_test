// Assignment Operators
let x = 10 + 5;
x += 10; // x = x + 10 = 25
x *= 4; //x = x*4 = 100
x++; // x = x + 1 = 101
x--; // x = x - 1 = 100

console.log(x);


//Comparison operators

console.log(ageAna > ageDimi);
// >; <; >=; <=;
console.log(ageDimi < 21);
console.log(ageAna >= 20);
console.log(ageDimi <= 50);
console.log(ageDimi >= 50);

console.log(jinNian - 1996 > jinNian - 2003);


