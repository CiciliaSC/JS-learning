//Math Operators
const jinNian = 2023;
const ageAna = jinNian - 1996;
const ageDimi = jinNian - 2003;
console.log(ageAna, ageDimi);

console.log(ageAna * 2, ageDimi / 5, 2 ** 3);
// 2**3 é 2^3 = 2*2*2 = 8

